{
	"compilerOptions": {
		"lib": ["es6", "es5", "ES2020"],
		"module": "commonjs",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "es6",
		"outDir": "dist",
		"rootDir": "./",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts", "src/ormconfig.ts", "tests/**/*.ts"],
	"exclude": ["node_modules/**/*", ".serverless/**/*", ".vscode/**/*"],
}