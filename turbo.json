{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["DATABASE_URL", "BASIC_TOKEN_EU", "KEY", "BASIC_TOKEN_AP", "BASIC_TOKEN_US", "BASIC_TOKEN_EL", "EXPORT_BUCKET", "MCD_DEVICEID", "API_KEY_AP"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "package": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ],
      "cache": false
    },
    "deploy:staging": {
      "env": ["AWS_PROFILE"],
      "dependsOn": [
        "package"
      ],
      "cache": false
    },
    "deploy:production": {
      "env": ["AWS_PROFILE"],
      "dependsOn": [
        "package"
      ],
      "cache": false
    }
  }
}
