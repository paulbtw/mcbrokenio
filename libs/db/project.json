{
  "name": "db",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/db/src",
  "projectType": "library",
  "targets": {
    "prisma": {
      "command": "prisma",
      "options": {
        "cwd": "libs/db"
      }
    },
    "reset": {
      "command": "prisma migrate reset --force --skip-generate --skip-seed",
      "options": {
        "cwd": "libs/db"
      }
    },
    "migrate": {
      "command": "prisma migrate dev",
      "options": {
        "cwd": "libs/db"
      }
    },
    "generate": {
      "command": "prisma generate",
      "options": {
        "cwd": "libs/db"
      }
    }
  },
  "tags": ["lib"]
}
